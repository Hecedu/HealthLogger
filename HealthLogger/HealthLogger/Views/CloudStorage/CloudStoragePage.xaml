<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthLogger.Views.CloudStoragePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Do you want to Backup your local logs to the cloud or sync with the cloud?"  FontSize="Medium" TextColor="Black"></Label>
            <Button Text="Backup" Command="{Binding BackupCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Sync" Command="{Binding SyncCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>