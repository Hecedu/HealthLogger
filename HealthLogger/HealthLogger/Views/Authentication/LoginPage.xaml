<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthLogger.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username:" FontSize="Medium" TextColor="Black" />
            <Entry Text="{Binding Username, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Email:" FontSize="Medium" TextColor="Black" />
            <Editor Text="{Binding Email, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" Margin="0" Keyboard="Numeric"/>
            <Label Text="Password:" FontSize="Medium" TextColor="Black" />
            <Entry Text="{Binding Password, Mode=TwoWay}" FontSize="Medium" Margin="0" Keyboard="Numeric" IsPassword="True"/>


            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Login" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>